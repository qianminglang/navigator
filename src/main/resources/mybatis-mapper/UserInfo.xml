<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clear.navigator.repository.UserRepository">
	<select id="selectUserInfo"
			parameterType="com.clear.navigator.param.input.UserInfoParam"
			resultType="com.clear.navigator.dto.UserInfoDto">
		SELECT *
		FROM userInfo
		<where>
			<if test="item.username!=null and item.username!=''">
				username = #{item.username}
			</if>
			<if test="item.password!=null and item.password!=''">
				AND password = #{item.password}
			</if>
		</where>
	</select>

	<select id="selectUserInfoByPage"
			parameterType="com.clear.navigator.param.input.UserInfoParam"
			resultType="com.clear.navigator.dto.UserInfoDto">
		SELECT *
		FROM userInfo
		<where>
			<if test="item.username!=null and item.username!=''">
				username = #{item.username}
			</if>
			<if test="item.password!=null and item.password!=''">
				AND password = #{item.password}
			</if>
		</where>
	</select>
</mapper>